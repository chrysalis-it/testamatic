{
  "name": "testamatic",
  "version": "0.0.1",
  "description": "Configurable, light weight Integration test automation",
  "repository": {
    "type": "git",
    "url": "https://github.com/getpaulj/testamatic.git"
  },
  "author": "Paul Jacobs",
  "scripts": {
    "clean": "rm -rf ./dist",
    "compile": "tsc -p .",
    "compile:clean_compile": "npm run clean && npm run compile",
    "test:micro": "jest --selectProjects micro --forceExit --detectOpenHandles",
    "test:integration": "jest --selectProjects integration  --forceExit --detectOpenHandles",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "docker": "docker-compose -f .devcontainer/docker-compose.yml",
    "docker:up": "npm run docker -- up -d",
    "docker:down": "npm run docker -- down -v",
    "docker:logs": "npm run docker -- logs -f",
    "docker:bounce": "npm run docker:down npm run docker:up docker:dev:connect",
    "docker:dev:connect": "npm run docker:up && npm run docker -- exec  dev bash",
    "docker:localstack:wait": "npm run docker -- exec -T dev bash -c \"source ./.devcontainer/wait-for-it.sh && docker_wait_for_service http://localstack.local:4566 40\""
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.0.0",
    "@types/cors": "^2.0.0",
    "@types/express": "^4.0.0",
    "@types/jest": "^29.0.0",
    "@types/koa": "^2.00.0",
    "@types/koa-bodyparser": "^4.0.0",
    "@types/koa-sslify": "~4.0.3",
    "@types/node-forge": "^1.0.0",
    "@types/uuid": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^5.0.6",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint-config-prettier": "^8.0.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^29.0.0",
    "jose": "^4.0.0",
    "mismatched": "^3.3.5",
    "npm-update": "^3.0.0",
    "prettier": "^3.3.2",
    "thespian": "^3.3.5",
    "ts-jest": "^29.0.0",
    "ts-loader": "^9.0.0",
    "ts-node": "^10.0.0",
    "typed-rest-client": "^1.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "aws-lambda": "^1.0.0",
    "continuation-local-storage": "^3.0.0",
    "express": "^4.0.0",
    "koa": "^2.0.0",
    "koa-bodyparser": "^4.4.1",
    "koa-sslify": "^5.0.0",
    "node-forge": "^1.0.0",
    "pino": "^8.0.0",
    "promises-arrow": "^1.0.0",
    "uuid": "^8.0.0"
  }
}
